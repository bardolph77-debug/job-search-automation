# Job Search Automation - Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type: sqlite, postgresql, mysql
DATABASE_TYPE=sqlite

# SQLite (for development)
DATABASE_PATH=./data/jobs.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/job_search_db
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=job_search_db
# DATABASE_USER=your_username
# DATABASE_PASSWORD=your_password

# =============================================================================
# API KEYS AND CREDENTIALS
# =============================================================================

# Notion Integration
NOTION_API_KEY=your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# OpenAI API (for resume matching, cover letter generation)
# OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (for notifications and follow-ups)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_specific_password

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================

# Rate limiting (seconds between requests)
RATE_LIMIT=1.0

# Maximum results per search
MAX_RESULTS_PER_BOARD=50

# User agent for web scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Selenium WebDriver path (if using Selenium)
# WEBDRIVER_PATH=/path/to/chromedriver

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (True/False)
DEBUG=True

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/job_search.log

# =============================================================================
# JOB SEARCH PREFERENCES
# =============================================================================

# Default search keywords (comma-separated)
SEARCH_KEYWORDS=python,developer,engineer,cybersecurity

# Default locations (comma-separated)
SEARCH_LOCATIONS=Helsinki,Espoo,Tampere,Remote

# Minimum salary filter (optional)
# MIN_SALARY=50000

# Required skills (comma-separated, optional)
# REQUIRED_SKILLS=Python,SQL,Docker

# Experience levels (comma-separated: entry,mid,senior)
# EXPERIENCE_LEVELS=mid,senior

# =============================================================================
# STORAGE AND EXPORT
# =============================================================================

# Output directory for scraped data
OUTPUT_DIR=./output

# Export format: json, csv, excel
EXPORT_FORMAT=json

# =============================================================================
# SECURITY
# =============================================================================

# Secret key for session management (generate a random string)
SECRET_KEY=change_this_to_a_random_secret_key_in_production

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Slack webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Telegram bot for notifications
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id

# LinkedIn API credentials (if available)
# LINKEDIN_CLIENT_ID=your_client_id
# LINKEDIN_CLIENT_SECRET=your_client_secret

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. After copying this file to .env, replace all placeholder values
# 2. Keep your .env file secure and never share it
# 3. Use strong, unique passwords for all services
# 4. For production, use environment-specific values
# 5. Consider using a secrets manager for sensitive data
